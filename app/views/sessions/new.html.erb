<section class="users-logout-index">

  <header class="page-header">
    <h1>User &raquo; Login</h1>
  </header>

  <div class="well">
    <%= link_to 'Register', [:users], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for :login do |form| %>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>

          <%= form.submit 'Login', class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>

</section>
